<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".activity.activityDifficulty"
    android:background="#1EB4F0">

    <ImageView
        android:id="@+id/ImageDiffTheme"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/transparentwm"
        android:layout_marginTop="0dp"
        />

    <Button
        android:id="@+id/ButtonDiffEasy"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="EASY"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ButtonDiffHard"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="HARD"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonDiffEasy"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/ButtonDiffExpert"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="EXPERT"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonDiffHard"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

</RelativeLayout>
