<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#1EB4F0">

    <ImageView
        android:id="@+id/ImageMainTheme"
        android:layout_width="match_parent"
        android:layout_height="230dp"
        android:scaleType="fitXY"
        android:src="@drawable/worldmap"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="250dp"/>

    <TextView
        android:id="@+id/TextMainTitle1"
        android:layout_width="230dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:text="FLAGS"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#ffffff"
        android:textSize="60dp"
        android:textStyle="bold"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="15dp"/>

    <TextView
        android:id="@+id/TextMainTitle2"
        android:layout_width="180dp"
        android:layout_height="90dp"
        android:background="@android:color/transparent"
        android:text="QUIZ"
        android:textAlignment="center"
        android:textAllCaps="true"
        android:textColor="#000000"
        android:textSize="60dp"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="230dp"
        tools:layout_editor_absoluteY="120dp"
        android:layout_marginTop="150dp"
        android:layout_marginLeft="210dp"/>

    <EditText
        android:id="@+id/EditMainName"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:ems="10"
        android:hint="Player's Name"
        android:inputType="text"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textStyle="bold"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="80dp"
        tools:layout_editor_absoluteY="520dp"
        android:layout_below="@+id/ImageMainTheme"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <Button
        android:id="@+id/ButtonMainPlay"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="Let's play"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/EditMainName"
        android:layout_centerHorizontal="true"/>

    <Button
        android:id="@+id/ButtonStopMusic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="StopMusic"
        android:layout_marginStart="360dp"
        android:background="@drawable/baseline_pause_circle_24"
        android:backgroundTint="@color/white"
        />

</RelativeLayout>
