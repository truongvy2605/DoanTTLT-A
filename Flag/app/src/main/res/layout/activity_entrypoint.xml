<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.activityEntryPoint"
    android:background="#1EB4F0">

    <ImageView
        android:id="@+id/ImageEntryTheme"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:scaleType="fitXY"
        android:src="@drawable/transparentwm"
        android:layout_marginTop="240dp"
        />

    <Button
        android:id="@+id/ButtonEntryPG"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="PLAY GAME"
        android:gravity = "center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_marginTop="250dp"
        android:layout_centerHorizontal="true"
        />

    <Button
        android:id="@+id/ButtonEntryHS"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="HIGH SCORE"
        android:gravity = "center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonEntryPG"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/ButtonEntryIns"
        android:layout_width="250dp"
        android:layout_height="75dp"
        android:backgroundTint="#4682B4"
        android:text="INSTRUCTION"
        android:gravity = "center"
        android:textColor="@color/white"
        android:textSize="28dp"
        android:textStyle="bold"
        android:layout_below="@+id/ButtonEntryHS"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        />

    <Button
        android:id="@+id/ButtonStopMusic"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:contentDescription="StopMusic"
        android:layout_marginStart="360dp"
        android:background="@drawable/baseline_pause_circle_24"
        android:backgroundTint="@color/white"
        />

</RelativeLayout>
